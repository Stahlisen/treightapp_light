<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?android:windowBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/your_goal_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="YOUR GOAL WEIGHT:"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/your_goal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="86KG"
            android:textStyle="bold"
            android:textColor="@color/green_2"
            android:layout_toRightOf="@id/your_goal_desc"
            android:layout_marginLeft="20dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/edit_button"
            android:id="@+id/button_change_goal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/your_goal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="I WANT TO"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

        <ToggleButton
            android:id="@+id/goal_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="GAIN"
            android:textOff="LOOSE"
            android:layout_toRightOf="@id/your_goal_type"
            android:layout_alignBaseline="@id/your_goal_type"
            android:layout_marginLeft="20dp"
            android:background="@drawable/goal_type_togglebutton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEIGHT"
            android:textStyle="bold"
            android:layout_toRightOf="@id/goal_switch"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/your_goal_date_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNTIL:"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/your_goal_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26TH OF JANUARY 2016"
            android:textStyle="bold"
            android:layout_toRightOf="@id/your_goal_date_desc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/edit_button"
            android:id="@+id/button_change_goal_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/save_goal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textColor="@color/green_2"/>



</LinearLayout>