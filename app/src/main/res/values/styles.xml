<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/PrimaryColor</item>

    </style>

    <style name="cardView_topSectionText">
        <item name="android:textColor">@color/topSectionTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>



    </style>

    <style name="cardView_secondSectionText">
        <item name="android:textColor">@color/secondSectionTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="cardView_thirdSectionText">
        <item name="android:textColor">@color/secondSectionTextColor</item>
        <item name="android:textStyle"></item>
        <item name="android:textSize">12dp</item>
    </style>



    
    

</resources>
