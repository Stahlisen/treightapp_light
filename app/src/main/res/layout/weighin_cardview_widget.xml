<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:padding="16dp"
              android:gravity="center"
    >

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardView_topTitle"
            style="@style/cardView_topSectionText"
            android:text="WEIGHIN #4"
            android:padding="12dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/cardView_image"
            android:src="@drawable/ic_launcher"
            android:layout_below="@id/cardView_topTitle"
            android:elevation="8dp"
            />

        <TextView
            android:id="@+id/cardView_secondaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85 KG"
            android:gravity="center_vertical"
            style="@style/cardView_secondSectionText"
            android:layout_below="@+id/cardView_image"
            android:layout_alignLeft="@+id/cardView_image"
            android:layout_alignStart="@+id/cardView_image"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/cardView_subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 DAYS AGO"
            android:gravity="center_vertical"
            style="@style/cardView_thirdSectionText"
            android:layout_below="@id/cardView_secondaryTitle"
            android:layout_alignLeft="@+id/cardView_secondaryTitle"
            android:layout_alignStart="@+id/cardView_secondaryTitle"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/cardView_seperator"
            android:background="@color/secondSectionTextColor"
            android:layout_below="@id/cardView_subText"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/cardView_alternateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO STATISTICS AVAILABLE"
            android:layout_below="@id/cardView_seperator"
            android:gravity="center"
            android:layout_margin="20dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/cardView_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="SHOW DETAILS"
            android:textColor="@color/topSectionTextColor"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:padding="8dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_below="@id/cardView_seperator" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>