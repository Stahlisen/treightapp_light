<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_material_light">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark_material_light"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <EditText
        android:id="@+id/edit_enter_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:textColorHint="@color/text_white"
        android:textColor="@color/text_white"
        android:maxLength="30"
        android:singleLine="true"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/metrics_spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal">
        </Spinner>

        <EditText
            android:id="@+id/edit_enter_current_weight"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter your current weight"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:maxLength="30"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="20dp"
            android:focusable="false"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/edit_enter_goal_weight"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter your goal weight"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:maxLength="30"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="20dp"
            android:focusable="false"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/edit_enter_goal_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter your goal date"
            android:textColorHint="@color/text_white"
            android:textColor="@color/text_white"
            android:maxLength="30"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="20dp"
            android:focusable="false"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/button_takePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAKE A PHOTO"
                android:textColor="@color/text_white"
                style="?android:attr/borderlessButtonStyle"
                />

            <TextView
                android:id="@+id/text_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"/>

            <Button
                android:id="@+id/button_selectPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT A PHOTO"
                android:textColor="@color/text_white"
                style="?android:attr/borderlessButtonStyle"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/validation_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="validation"
            android:textColor="@color/text_white"
            android:textSize="15dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textColor="@color/text_white"
            style="?android:attr/borderlessButtonStyle"
            android:layout_weight="0.5"
            android:layout_gravity="center_horizontal"
            />

        </LinearLayout>

</LinearLayout>