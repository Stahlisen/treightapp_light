<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="horizontal"
                android:background="?android:windowBackground">
    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/id_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="WEIGH IN# 4"/>

    <TextView
        android:id="@+id/weight_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="8dp"
        android:text="80,7 KG"
        android:textColor="@color/green_2"/>

        <TextView
            android:id="@+id/date_item_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:text="3 DAYS AGO"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/since_last_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SINCE LAST"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/since_last_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/since_last_lbl"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:text="-0,1 KG"
            android:textColor="@color/green_2"/>

        <TextView
            android:id="@+id/till_goal_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/since_last_value"
            android:text="LEFT TILL GOAL"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/till_goal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/till_goal_lbl"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:text="10 KG"
            android:textColor="@color/green_2"/>


    </RelativeLayout>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:layout_marginRight="50dp"
        android:id="@+id/weighin_image_view" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/view_details_button"/>

</LinearLayout><!-- From: file:/Users/fredrikstahl/Desktop/MyFitnessJourney_Light/myfitnessjourney_android/app/src/main/res/layout/weighin_list_item_v2.xml -->